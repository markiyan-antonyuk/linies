<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiniesTheme" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="ConfigTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="ConfigItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ConfigItem.Text">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ConfigItem.Button">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ConfigItem.Title" parent="ConfigItem.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConfigItem.SubTitle" parent="ConfigItem.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ConfigItem.Switch" />

    <style name="ComplicationIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ComplicationText" parent="ConfigItem.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ComplicationLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>