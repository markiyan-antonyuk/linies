<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="top">

        <TextView
            style="@style/ConfigTitle"
            android:text="@string/config_title_colors" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/secondsTv"
                style="@style/ConfigItem.TextSmall"
                android:text="@string/config_seconds" />

            <TextView
                android:id="@+id/minutesTv"
                style="@style/ConfigItem.TextSmall"
                android:text="@string/config_minutes" />

            <TextView
                android:id="@+id/hoursTv"
                style="@style/ConfigItem.TextSmall"
                android:text="@string/config_hours" />

            <TextView
                android:id="@+id/digitalTv"
                style="@style/ConfigItem.TextSmall"
                android:text="@string/config_digital" />

            <TextView
                android:id="@+id/dateTv"
                style="@style/ConfigItem.TextSmall"
                android:layout_columnSpan="2"
                android:text="@string/config_date" />
        </GridLayout>
    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>