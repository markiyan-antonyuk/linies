<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="top">

        <TextView
            android:id="@+id/titleTv"
            style="@style/ConfigTitle" />

        <TextView
            android:id="@+id/colorPickerTv"
            style="@style/ConfigItem.Text"
            android:text="@string/config_color" />

        <CheckBox
            android:id="@+id/visibleCheckbox"
            style="@style/ConfigItem.Checkbox"
            android:text="@string/config_visible" />
    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>