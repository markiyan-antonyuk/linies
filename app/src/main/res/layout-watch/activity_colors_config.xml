<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_padding"
        android:paddingTop="@dimen/activity_padding">

        <TextView
            style="@style/ConfigItem.Title"
            android:text="@string/config_colors" />

        <TextView
            android:id="@+id/configSeconds"
            style="@style/ConfigItem.Text"
            android:text="@string/config_seconds" />

        <TextView
            android:id="@+id/configMinutes"
            style="@style/ConfigItem.Text"
            android:text="@string/config_minutes" />

        <TextView
            android:id="@+id/configHours"
            style="@style/ConfigItem.Text"
            android:text="@string/config_hours" />

        <TextView
            android:id="@+id/configDigital"
            style="@style/ConfigItem.Text"
            android:text="@string/config_digital" />

        <TextView
            android:id="@+id/configDate"
            style="@style/ConfigItem.Text"
            android:text="@string/config_date" />

        <TextView
            android:id="@+id/configComplications"
            style="@style/ConfigItem.Text"
            android:text="@string/config_complications" />
    </LinearLayout>
</ScrollView>