<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiniesTheme" parent="@android:style/Theme.Material">
        <item name="android:background">#242424</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="ComplicationsButton">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableStart">@drawable/ic_plus</item>
        <item name="android:drawableTint">@color/accent</item>
    </style>
</resources>