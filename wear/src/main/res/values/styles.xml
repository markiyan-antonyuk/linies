<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiniesTheme" parent="@android:style/Theme.Material">
        <item name="android:background">#242424</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="ConfigItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ConfigItem.Text">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ConfigItem.SubText" parent="ConfigItem.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ConfigItem.Button">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ConfigItem.Title" parent="ConfigItem.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConfigItem.Checkbox" />

    <style name="ComplicationsButton">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableStart">@drawable/ic_plus</item>
        <item name="android:drawableTint">@color/accent</item>
    </style>
</resources>